#!/usr/bin/env oh

define $dir: "/"::join $origin scripts

# Generate README.
find $dir -name "[0-9]*.oh" |
grep -i readme | sort |
while (define $file: readline) {
	awk "
BEGIN { code = 0 }
$0 ~ /^#[#+]/ { print substr($0, 4) }
$1 ~ /^#[}]/ { code = 0; print \"\" }
code > 0 { print \"    \" $0 }
$1 ~ /^#[{]/ { code = 1 }
" $file
}

