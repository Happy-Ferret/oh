#!/usr/bin/env oh

if (ne 1: length $args) {
    error "usage:" $0 "<pattern>"
    exit 1
}

define $dir: "/"::join $origin scripts
define $pattern = $1

# Generate README.
find $dir -name "[0-9]*.oh" |
grep -i $pattern | sort |
while (define $file: readline) {
	awk "
BEGIN { code = 0 }
$0 ~ /^#[#+]/ { print substr($0, 4) }
$1 ~ /^#[}]/ { code = 0; print \"\" }
code > 0 { print \"    \" $0 }
$1 ~ /^#[{]/ { code = 1 }
" $file
}

